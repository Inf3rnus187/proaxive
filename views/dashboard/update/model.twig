{% extends '_layout/dashboard/layout.twig' %}

{% block title %} Mise à jour de Proaxive Lite {% endblock %}

{% block breadCrumb %}
    {{ breadcrumb('','', false) | raw }}
{% endblock %}

{% block body %}
    <div class="section--admin">
        <div class="container">
            <div class="admin-content">
            {{ include('_notifications.twig') }}
            <div class="columns">
                <div class="column col-6 col-sm-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title"><i class="icofont-database"></i> Mise à jour Proaxive</h4>
                                <span>Mise à jour vers 1.6.0-beta9</span>
                            </div>
                            <div class="card-body">
                                {{ viewAlert('info',"Ne lancez qu'une seul fois cette mise à jour !") | raw }}
                                <p>
                                    La nouvelle version (<strong>1.6.0-beta9</strong>) a besoin de mettre à jour votre base de données.<br>
                                </p>
                                <div class="admin-form">
                                    <form method="post" action="" class="d-inline-block">
                                        <input type="hidden" name="importSql" value="beta9">
                                        {{ form.submitDefault('Mettre à jour la base de données', 'primary') | raw }}
                                    </form>
                                    <!--
                                    <form method="post" action="/database-save" class="d-inline-block">
                                        {{ form.submitDefault('Sauvegarder la BDD', 'info') | raw }}
                                    </form>
                                    -->
                                </div>
                            </div>
                        </div>
                </div>
                <div class="column col-6 col-sm-12">
                    <div class="card">
                        <div class="card-header"><h4 class="card-title"><i class="icofont-bug"></i> Changelogs</h4> ver.1.6.0-beta9</div>
                        <div class="card-body">
                            <div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}