{% extends '_layout/dashboard/layout.twig' %}

{% block title %} Modification d'un status {% endblock %}

{% block javascripts %}
    <!-- START::JSColor -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jscolor/2.4.6/jscolor.min.js"></script>
    <script>
        // let's set defaults for all color pickers
        jscolor.presets.default = {
            width: 141,               // make the picker a little narrower
            previewSize: 40,          // make the color preview bigger
            palette: [
                '#000000', '#7d7d7d', '#870014', '#ec1c23', '#ff7e26',
                '#fef100', '#22b14b', '#00a1e7', '#3f47cc', '#a349a4',
                '#ffffff', '#c3c3c3', '#b87957', '#feaec9', '#ffc80d',
                '#eee3af', '#b5e61d', '#99d9ea', '#7092be', '#c8bfe7',
            ],
        };
    </script>
{% endblock %}

{% block breadCrumb %}
    {{ breadcrumb('','', status.title) | raw }}
{% endblock %}

{% block body %}
    <div class="section--admin">
        <div class="container">
            <div class="admin-content">
                {{ include('_notifications.twig') }}
                <form class="form-big" method="post" action="#">
                    <div class="grid-12">
                        <div class="col-6_sm-12_lg-12">
                            <div class="card">
                                <div class="card-header"><h4 class="card-title">Modifier le statut - {{ status.title }}</h4></div>
                                <div class="card-body">
                                    <div class="admin-form">
                                        {{ include('dashboard/status/_form.twig') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}