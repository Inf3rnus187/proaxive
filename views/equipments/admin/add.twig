{% extends '_layout/dashboard/layout.twig' %}

{% block title 'Gestion des équipements' %}

{% block stylesheets %}
    <!-- START::SimpleMDE -->
    <link rel="stylesheet" href="{{ getenv('APP_ROOT_PUBLIC') }}/assets/javascript/simplemde/simplemde.min.css">
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
<script>
    [].forEach.call(document.getElementsByClassName('area-mdeditor'),element => {
    const simplemde = new SimpleMDE({
    element: element,
});
});
</script>
{% endblock %}

{% block body %}
    <div class="grid-12">
        <div class="col-12_sm-12">
            <div class="card">
                <form class="form-big" method="post">
                    <div class="card-header d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">Nouvel équipement</h4>
                            <span>Informations pour le nouvel équipement</span>
                        </div>
                        <div>
                            {{ form.submitDefault('Sauvegarder', 'primary') | raw }}
                        </div>
                    </div>
                    <div class="card-body card-tabs nopg">
                        <div class="admin-form tabs-form">
                            <ul id="tabs">
                                <li><a href="#tab1">Informations générales</a></li>
                                <li><a href="#tab2">Configuration matériels</a></li>
                            </ul>
                            <div class="tabs-pe pg2">
                                <div class="tabContent" id="tab1">
                                    {{ include('equipments/admin/_form.twig') }}
                                </div>
                                <div class="tabContent" id="tab2">
                                    {{ viewAlert('info', "Laissez ce formulaire vide si vous souhaitez importer un rapport d'équipement BAO par la suite.") | raw }}
                                    <div class="grid-12">
                                        {{ include('equipments/admin/_form_rapport.twig') }}
                                    </div>
                                    {{ form.textareaMde('content', "Informations complémentaire", false, false, false) | raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}