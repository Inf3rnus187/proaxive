{% extends '_layout/dashboard/layout.twig' %}

{% block title %}Les administrateurs{% endblock %}

{% block body %}

    <div class="section--admin">
    <div class="container">
    <div class="admin-content">
        {{ include('_notifications.twig') }}
        <div class="card">
            <div class="card-header"><h4 class="card-title">Gestion des utilisateurs</h4></div>
            <div class="card-table">
                <table class="table-default">
                    <thead>
                    <tr>
                        <th style="width:45px;" scope="col">#</th>
                        <th scope="col" class="w350p">Nom</th>
                        <th scope="col">Rang (lvl)</th>
                        <th scope="col">Pseudo</th>
                        <th scope="col">Email</th>
                        <th scope="col">Dernière visite</th>
                        <th scope="col">Date de màj</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for auser in ausers %}
                        <tr onclick="document.location = '{{ auser.urlAdmin(auser.u_id) }}';" style="cursor: pointer;">
                            <td>{{ auser.u_id }}</td>
                            <td>{{ auser.fullname }}</td>
                            <td>{{ auser.r_title }} ({{ auser.r_level }})</td>
                            <td>{{ auser.pseudo }}</td>
                            <td>{{ auser.mail }}</td>
                            <td>{{ auser.lastvisite | date('d-m-Y') }}</td>
                            <td>{{ auser.update_at | date('d-m-Y') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}