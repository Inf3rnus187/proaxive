{% extends '_layout/dashboard/layout.twig' %}

{% block title %}Mon compte - {{ auser.pseudo }}{% endblock %}

{% block body %}
    <div class="grid">
        <div class="col-12_sm-12_lg-12">
            {{ include('_notifications.twig') }}
            <form method="post" action="" class="form-big">
                <div class="card">
                    <div class="card-column d-flex">
                        <div class="card-aside card-aside-left user-aside">
                            {{ include('ausers/admin/myaccount/_profil.twig') }}
                        </div>
                        <div class="card-inner fg-1">
                            {{ form.inputEmpty('password', 'Nouveau mot de passe', false, false, true, {'type': 'password'}) | raw }}
                            {{ form.inputEmpty('confirmpassword', 'Confirmez le mot de passe',false, false, true,  {'type': 'password'}) | raw }}
                            {{ form.submitDefault('Changer le mot de passe', 'primary', 'editpassword') | raw }}
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}