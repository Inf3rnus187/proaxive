{% extends '_layout/dashboard/layout_login.twig' %}

{% block body %}
    <div class="auth-login-header mg-b-2">
        <div class="text-center mg-b-2">
            <img class="img-fluid" style="width:40%;" src="{{ getenv('APP_ROOT_PUBLIC') }}/assets/styles/proaxive/vectorv190413650.jpg" alt="">
        </div>
        <h5>Authentification en deux étapes</h5>
        <p class="nomg">Veuillez entrer le code généré par votre application mobile</p>
    </div>
    {{ include('_notifications.twig') }}
    <form method="post" class="form-big">
        {{ form.input('code', '<i class="ri-shield-keyhole-fill"></i> Code', '') | raw }}
        <button type="submit" name="" class="btn btn-primary w100"><i class="ri-checkbox-circle-line"></i> Valider</button>
    </form>
{% endblock %}