{% extends '_layout/dashboard/layout_login.twig' %}

{% block body %}
    <div class="auth-login-header mg-b-2">
        <div class="text-center mg-b-2">
            <img class="img-fluid" style="width:40%;" src="{{ getenv('APP_THEME') }}/logo_proaxive.png" alt="">
        </div>
        <h5>Réinitialiser son accès Proaxive !</h5>
        <p class="nomg">Veuillez confirmer votre courriel associè à votre compte.</p>
    </div>
    {{ include('_notifications.twig') }}
    <form method="post" class="form-big">
        {{ form.email('email', '<i class="icofont-email"></i> Adresse email', 'bruce@waynetech.com') | raw }}
        <button type="submit" name="" class="btn btn-primary w100"><i class="ri-checkbox-circle-line"></i> Confirmer la demande</button>
    </form>
{% endblock %}