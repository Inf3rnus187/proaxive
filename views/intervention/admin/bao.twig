{% extends '_layout/dashboard/layout.twig' %}

{% block title %}Intervention du {{ intervention.icreated | format_date('none', 'EEEE d MMM Y', null, 'gregorian', 'fr') }}{% endblock %}

{% block body %}

    <!-- START .cards -->
    <div class="section--admin">
            <div class="container">
                <div class="admin-form">
                    {{ include('_notifications.twig') }}
                            <div class="grid-12">
                                <div class="col-9_sm-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h4 class="card-title">Rapport BAO pour l'intervention : <span class="text-primary">{{ intervention.title }}</span></h4>
                                        </div>
                                        <form method="post" action="" enctype="multipart/form-data">
                                        <div class="card-body">

                                            <div class="form-group">
                                                <label class="form-label">Fichier .txt</label>
                                                <textarea style="height:400px;" class="form-input" name="rapport_bao" placeholder="Courte description de l'intervention">{{ rapport }}</textarea>
                                                <small></small>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="grid-12">
                                                <div class="col-6_sm-12">
                                                    <button class="btn btn-primary" type="submit" name="rapport"><i class="icofont-check-circled"></i> Sauvegarder</button>
                                                </div>
                                                <div class="col-6_sm-12 text-right">
                                                    <button class="btn btn-danger" type="submit" name="delete_file"><i class="icofont-trash"></i> Supprimer ce rapport</button>
                                                </div>
                                            </div>
                                        </div>
                                        </form>
                                        </div>
                                    </div>
                                <div class="col-3_sm-12">
                                    <div class="card mg-b-2">
                                        <div class="card-header"><h2>Client</h2></div>
                                        <div class="card-body">
                                            {{ include('intervention/admin/include/_client.twig') }}
                                        </div>
                                    </div>
                                </div>
                                </div>
                            </div>
                        </div>
            </div>
    <!-- END .cards -->

{% endblock %}